<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_state_cat_height"
    android:layout_marginBottom="@dimen/item_state_cat_vertical_margin"
    android:layout_marginTop="@dimen/item_state_cat_vertical_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/cv_vertical_margin"
        android:layout_marginEnd="@dimen/cv_horizontal_margin"
        android:layout_marginStart="@dimen/cv_horizontal_margin"
        android:layout_marginTop="@dimen/cv_vertical_margin"
        android:elevation="@dimen/cv_elevation"
        card_view:cardCornerRadius="@dimen/cv_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_item_state_seal"
                android:layout_width="@dimen/item_state_cat_height"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_state_seal"
                android:padding="@dimen/item_state_cat_image_padding" />

            <TextView
                android:id="@+id/list_item_state_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/item_state_cat_horizontal_margin"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/list_item_expand_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/item_state_cat_horizontal_margin"
                android:contentDescription="@string/cd_expand_arrow"
                android:padding="@dimen/item_state_cat_image_padding"
                app:srcCompat="@drawable/ic_arrow_down" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>


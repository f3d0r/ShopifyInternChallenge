<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/cv_vertical_margin"
        android:layout_marginEnd="@dimen/cv_horizontal_margin"
        android:layout_marginStart="@dimen/cv_horizontal_margin"
        android:layout_marginTop="@dimen/cv_vertical_margin"
        android:elevation="@dimen/cv_elevation"
        card_view:cardCornerRadius="@dimen/cv_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/cv_padding">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_order_number"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order_number"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_number_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_order_number"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_shipping_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_number_items"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_shipping_location"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_number_items"
                android:textSize="@dimen/text_small" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>